<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:profil="clr-namespace:BeautifulWidgets.Profils.Round"
             x:Class="BeautifulWidgets.Menu.Burger.MenuBurgerLeft">
    <ContentView.Content>
        <Grid >

            <Grid x:Name="Flyout" BackgroundColor="#76A492" Margin="0" Padding="0">
                <Grid.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left"
                                        Swiped="FlyoutClose" />
                </Grid.GestureRecognizers>
                <!-- ADD WIDGETS HERE-->
                <profil:RoundProfilName/>
                <!-- ############### -->
            </Grid>

            <Frame x:Name="MainContent" BackgroundColor="IndianRed" Margin="0" Padding="0">
                <Frame.HasShadow>
                    <OnPlatform x:TypeArguments="x:Boolean">
                        <On Platform="ios">false</On>
                    </OnPlatform>
                </Frame.HasShadow>
                <Frame.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Right"
                                        Swiped="FlyoutOpen"/>
                </Frame.GestureRecognizers>
    
                <!-- ADD WIDGETS HERE-->

                <!-- ############### -->
            </Frame>

        </Grid>
    </ContentView.Content>
</ContentView>